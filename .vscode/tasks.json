{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-I${workspaceFolder}/include",
                "-I/usr/lib/wx/include/gtk2-unicode-3.0",
                "-I/usr/include/wx-3.0 -D_FILE_OFFSET_BITS=64",
                "-I/usr/include/c++/11.1.0/x86_64-pc-linux-gnu",
                "-DWXUSINGDLL",
                "-D__WXGTK__ -pthread",
                "-pthread",
                "-lwx_gtk2u_xrc-3.0",
                "-lwx_gtk2u_html-3.0",
                "-lwx_gtk2u_qa-3.0",
                "-lwx_gtk2u_adv-3.0",
                "-lwx_gtk2u_core-3.0",
                "-lwx_baseu_xml-3.0",
                "-lwx_baseu_net-3.0",
                "-lwx_baseu-3.0",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}